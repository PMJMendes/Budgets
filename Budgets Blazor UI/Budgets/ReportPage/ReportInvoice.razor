@using Krypton.Budgets.Blazor.UI.Budgets.BudgetPage._Core
@using Krypton.Budgets.Blazor.UI.Users._Common;

<MudItem xs="6" Style="page-break-inside: avoid;">
    <MudText Typo="Typo.body1">&nbsp;</MudText>
</MudItem>
<MudItem xs="2" Style="page-break-inside: avoid;">
    <MudText Typo="Typo.body1" Style="@($"color:{Colors.Red.Darken4};")">Factura n. @Model.InvoiceNumber</MudText>
</MudItem>
<MudItem xs="2">
    <MudText Typo="Typo.body1" Style="@($"color:{Colors.Red.Darken4};")">(@Model.Supplier)</MudText>
</MudItem>
<MudItem xs="1" Class="justify-end">
    <MudText Typo="Typo.body1" Style="@($"color:{Colors.Red.Darken4};")">@Model.InvoicedValue?.AsAnyValue()</MudText>
</MudItem>
<MudItem xs="1" />

@code {
    [Parameter]
    public InvoiceModel Model { get; set; } = default!;

    [CascadingParameter]
    public SecurityLevel Level { get; set; }
}
